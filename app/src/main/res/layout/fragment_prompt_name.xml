<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abdullahkucuk.fruittuin.Fragments.Subfragments.PromptNameFragment">

    <android.support.constraint.ConstraintLayout
        android:orientation="vertical"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:layout_width="121dp"
            android:layout_height="65dp"
            android:text="Volgende"
            android:id="@+id/button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            app:layout_constraintTop_toBottomOf="@+id/editTextName"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/button"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="328dp"
            android:layout_height="111dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Wat leuk dat je meedoet!\n\nIk ben Billy de Blije Bij, vertel eens hoe jij heet."
            android:id="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/editTextName"
            android:layout_marginBottom="24dp" />

        <ImageView
            android:layout_width="247dp"
            android:layout_height="231dp"
            android:id="@+id/imageView"
            android:src="@drawable/bee"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.08" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>


