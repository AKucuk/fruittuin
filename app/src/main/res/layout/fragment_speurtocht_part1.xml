<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abdullahkucuk.fruittuin.Fragments.Subfragments.SpeurtochtPart1Fragment">

    <android.support.constraint.ConstraintLayout
        android:orientation="vertical"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:layout_width="114dp"
            android:layout_height="55dp"
            android:text="Volgende"
            android:id="@+id/button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            app:layout_constraintTop_toBottomOf="@+id/editTextName"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.92"
            app:layout_constraintVertical_bias="0.52" />

        <EditText
            android:layout_width="176dp"
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextName"
            android:layout_alignParentStart="true"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginEnd="112dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ik ben Blije Bij, vertel eens hoe jij heet."
            android:id="@+id/textView3"
            android:layout_alignParentStart="true"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintLeft_toLeftOf="@+id/textView2" />

        <ImageView
            android:layout_width="247dp"
            android:layout_height="231dp"
            android:id="@+id/imageView"
            android:src="@drawable/bee"
            tools:layout_editor_absoluteX="7dp"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="83dp"
            android:layout_height="101dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Hallo!"
            android:id="@+id/textView"
            app:layout_constraintHorizontal_bias="0.02"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/imageView"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.87" />

        <TextView
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Welkom in de Fruittuin!"
            android:id="@+id/textView2"
            android:layout_alignParentStart="true"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="311dp" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>


